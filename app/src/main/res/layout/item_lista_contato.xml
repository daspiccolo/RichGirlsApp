<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_root"
    android:focusable="true">

    <TextView
        android:id="@+id/lbl_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Nome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/lbl_banco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ItaÃº"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_nome"/>

    <TextView
        android:id="@+id/lbl_conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ag:0933 \t cc:12345-6"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/lbl_nome"
        app:layout_constraintLeft_toRightOf="@id/lbl_banco"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/lbl_banco"/>

</androidx.constraintlayout.widget.ConstraintLayout>